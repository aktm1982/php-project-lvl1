#!/usr/bin/env php

<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function \cli\line;
use function \cli\prompt;

use \Brain\Game\Common;
use \Brain\Game\Even;

$brainEvenData = ['score' => 0, 'targetScore' => 3];

$brainEvenData['userName'] = Common\initializeGame();

line('Answer "yes" if the number is even, otherwise answer "no".');

while($brainEvenData['score'] >= 0 && $brainEvenData['score'] < 3) {
	
	$result = Even\getResult();
	
	$brainEvenData['score'] = Common\checkResult($result, $brainEvenData);
}
