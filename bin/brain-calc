#!/usr/bin/env php

<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function \cli\line;
use function \cli\prompt;

use \Brain\Game\Common;
use \Brain\Game\Calc;

$brainCalcData = ['score' => 0, 'initScore' => 0, 'targetScore' => 3];

$brainCalcData['userName'] = Common\initializeGame();

line('What is the result of the expression?');

while(Common\continueGame($brainCalcData['score'], $brainCalcData['initScore'], $brainCalcData['targetScore'])) {
	
	$result = Calc\getResult();
	
	$brainCalcData['score'] = Common\checkResult($result, $brainCalcData);
}
